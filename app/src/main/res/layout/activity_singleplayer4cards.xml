<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Singleplayer4cards">

    <ImageButton
        android:id="@+id/img1"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/img2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/padrao" />

    <ImageButton
        android:id="@+id/img2"
        android:layout_width="@dimen/carta_largura"
        android:layout_height="@dimen/carta_altura"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/img3"
        app:layout_constraintStart_toEndOf="@+id/img1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/padrao" />

    <ImageButton
        android:id="@+id/img3"
        android:layout_width="@dimen/carta_largura"
        android:layout_height="@dimen/carta_altura"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/img4"
        app:layout_constraintStart_toEndOf="@+id/img2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/padrao" />

    <ImageButton
        android:id="@+id/img4"
        android:layout_width="@dimen/carta_largura"
        android:layout_height="@dimen/carta_altura"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/padrao" />

    <ImageButton
        android:id="@+id/img5"
        android:layout_width="@dimen/carta_largura"
        android:layout_height="@dimen/carta_altura"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/idresultado"
        app:layout_constraintEnd_toStartOf="@+id/img6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/padrao" />

    <ImageButton
        android:id="@+id/img6"
        android:layout_width="@dimen/carta_largura"
        android:layout_height="@dimen/carta_altura"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/idresultado"
        app:layout_constraintEnd_toStartOf="@+id/img7"
        app:layout_constraintStart_toEndOf="@+id/img5"
        app:layout_constraintTop_toBottomOf="@+id/img2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/padrao" />

    <ImageButton
        android:id="@+id/img7"
        android:layout_width="@dimen/carta_largura"
        android:layout_height="@dimen/carta_altura"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/idresultado"
        app:layout_constraintEnd_toStartOf="@+id/img8"
        app:layout_constraintStart_toEndOf="@+id/img6"
        app:layout_constraintTop_toBottomOf="@+id/img3"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/padrao" />

    <ImageButton
        android:id="@+id/img8"
        android:layout_width="@dimen/carta_largura"
        android:layout_height="@dimen/carta_altura"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintBottom_toTopOf="@+id/idresultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img7"
        app:layout_constraintTop_toBottomOf="@+id/img4"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/padrao" />

    <TextView
        android:id="@+id/idresultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="[RESULTADO]" />
</androidx.constraintlayout.widget.ConstraintLayout>